<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h2 class="title is-2 has-text-white-ter">Edit <%= resource_name.to_s.humanize %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <div class="control">
              <%= f.label :name, class: "label has-text-white-ter"%>
              <%= f.text_field :name, autofocus:true, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
             <%= f.label :username, class: "label has-text-white-ter" %> 
             <%= f.text_area :username, class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :email, class: "label has-text-white-ter"%>
              <%= f.email_field :email, class: "input" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <div class="control">
              <%= f.label :password, class: "label has-text-white-ter"  %> <i class="has-text-white-ter">(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
              <% if @minimum_password_length %>
                <br />
                <em class="has-text-white-ter"><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :password_confirmation, class: "label has-text-white-ter"%>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :current_password, class: "label has-text-white-ter" %> <i class="has-text-white-ter">(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "button is-info" %>
          </div>
        <% end %>
        <br>

        <h3 class="title is-4 has-text-white-ter">Cancel my account</h3>

        <p class="subtite has-text-white-ter">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger is-outlined" %></p>
        <br>

        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</section>
