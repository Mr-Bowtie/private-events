<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h1 class="title is-2 has-text-white-ter">Log in</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :email, class: "label has-text-white-ter"%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.label :password, class: "label has-text-white-ter"%>
              <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field is-grouped">
              <%= f.check_box :remember_me, class: "mr-2" %>
              <%= f.label :remember_me, class: "label has-text-white-ter" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "button is-info" %>
          </div>
          <br>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
