<%= form_with model: @event do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_area :title, autofocus: true %>
  </div>

  <div>
  <%= f.label :location %><br />
  <%= f.text_area :location, autocomplete: "location" %>
  </div>

  <div>
    <%= f.label :date %><br />
    <%= f.date_field :date %>
  </div>
  <br>
  <div>
    <%= f.label :visibility, "Public" %>
    <%= f.radio_button :visibility, "public" %>
    <br>
    <%= f.label :visibility, "Private" %>
    <%= f.radio_button :visibility, "private" %>
  </div>

  <div>
    <%= f.button :submit %>
  </div>
<% end %>
